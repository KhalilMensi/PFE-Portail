@{
    ViewData["Title"] = "UserPurchase";
}
<div class="container-fluid p-4">
    <div class="row col-md-12 mt-5 mb-5">
        <span style="font-family: 'Roboto Condensed', sans-serif;font-size:35px;" id="NbArt">@(PortailEbook.Resource.Resource.UserCommand) (@ViewBag.Count)</span>
    </div>
    <table id="myPurchases" class="table table-striped table-hover" style="background-color:#ffffff;cursor:pointer">
        <thead>
            <tr>
                <th>@(PortailEbook.Resource.Resource.PurchaseNumber)</th>
                <th>@(PortailEbook.Resource.Resource.PurchaseDate)</th>
                <th>@(PortailEbook.Resource.Resource.AmountHT)</th>
                <th>@(PortailEbook.Resource.Resource.AmountTTC)</th>
                <th>@(PortailEbook.Resource.Resource.PurchaseState)</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/assets/js/Commande.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}