@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid" style="margin-bottom:80px;">
    <div class="row" style="padding-bottom:1%">
        <div class="col-md-8">
            <h3 style="color:#6777ef">@localizer["PurchaseList"]</h3>
        </div>
    </div>
    <table id="myTable" class="table table-striped table-hover" style="background-color:#ffffff;cursor:pointer;">
        <thead>
            <tr>
                <th>@localizer["PurchaseNumber"]</th>
                <th>@localizer["User"]</th>
                <th>@localizer["PurchaseDate"]</th>
                <th>@localizer["AmountTTC"]</th>
                <th>@localizer["State"]</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/assets/js/PurchaseList.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}

