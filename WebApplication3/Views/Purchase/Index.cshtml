@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid" style="margin-bottom:80px;">
    <div class="row" style="padding-bottom:1%">
        <div class="col-md-9">
            <h3 style="color:#6777ef">@(PortailEbook.Resource.Resource.PurchaseList)</h3>
        </div>
        <div class="col-md-3">
            <a asp-action="UpsertPurchase" asp-controller="Purchase" class="btn btn-primary form-control text-white">
                @(PortailEbook.Resource.Resource.AddPurchase)
            </a>
        </div>
    </div>
    <table id="myTable" class="table table-striped table-hover" style="background-color:#ffffff;cursor:pointer;">
        <thead>
            <tr>
                <th>@(PortailEbook.Resource.Resource.PurchaseNumber)</th>
                <th>@(PortailEbook.Resource.Resource.User)</th>
                <th>@(PortailEbook.Resource.Resource.PublicationDate)</th>
                <th>@(PortailEbook.Resource.Resource.AmountTTC)</th>
                <th>@(PortailEbook.Resource.Resource.State)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/assets/js/PurchaseList.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}

