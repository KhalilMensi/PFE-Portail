@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid" style="margin-bottom:80px;">
    <div class="row justify-content-center" style="padding-bottom:1%">
        <div class="text-left col-md-9">
            <h3 style="color:#6777ef">@localizer["UsersList"]</h3>
        </div>
        <div class="text-right col-md-3">
            <a asp-action="UpsertUser" asp-controller="User" class="btn btn-primary form-control text-white">
                @localizer["AddUser"]
            </a>
        </div>
    </div>
    <table id="myTable" class="table table-striped" style="background-color:#ffffff">
        <thead>
            <tr>
                <th>@localizer["Code"]</th>
                <th>@localizer["Email"]</th>
                <th>@localizer["Password"]</th>
                <th>@localizer["Profil"]</th>
                <th>@localizer["Avatar"]</th>
                <th class="text-center">@localizer["Actions"]</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/assets/js/UserList.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}



