@model PortailEbook.Models.Entity.User

@{
    ViewData["Title"] = "Details";
}

<div class="container shadow col-md-12" style="margin-bottom:70px;background-color:#f8f9fd">
    <div class="p-5">
        <div>
            <h3>Account Details</h3>
        </div>
        <hr />
        <div class="text-center">
            @if (Model.filename == "")
            {
                <div class="text-center">
                    <img class="rounded-circle" src="~/uploads/user/unknown.png" style="width:200px;height:200px;" alt="Alternate Text" />
                </div>
            }
            else
            { 
                <div class="text-center">
                    <img class="rounded-circle" src="~/uploads/user/@Model.filename" style="width:200px;height:200px;" alt="Alternate Text" />
                </div>
             }
        </div>
        <hr />
        <form enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Code"></label>
                    <input asp-for="Code" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" readonly>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" readonly>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" readonly>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Adress">Address</label>
                <input asp-for="Adress" class="form-control" readonly>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" class="form-control" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PostalCode"></label>
                    <input asp-for="PostalCode" class="form-control" readonly>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Profil"></label>
                        <input asp-for="Profil" class="form-control" readonly>
                    </div>
                </div>
            </div>

            @if (@User.FindFirst(claim => claim.Type == System.Security.Claims.ClaimTypes.Role)?.Value == "Admin")
            {
                <div class="text-center mt-2">
                    <a asp-action="Index" asp-controller="User" class="btn btn-info col-md-12">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-check" viewBox="0 -1 16 20">
                            <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3.854 2.146a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 3.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 7.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z" />
                        </svg>
                        Back to List
                    </a>
                </div>
            }

        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}