@model List<PortailEbook.Models.Entity.Ebook>
@{
    ViewData["Title"] = "Search Page";
}
<div style="background-color:#f8f9fd;">
    <div class="container mt-4 mb-4">
        <div class="row ">
            <div class="row col-md-12 p-3">
                <p style="font-size:15px">Accueil > Tous les produits > @ViewBag.search</p>
            </div>
            @if (Model == null)
            {
                <div class="row mt-1 mb-1">
                    <h4>No Document available !!</h4>
                </div>
            }
            else
            {
                <div class="card row col-md-3 m-1" style="height:300px">

                </div>
                <div class="container-fluid card col-md-8 m-1">
                    <div class="row col-md-12 mt-2 mb-2 align-content-start">
                        <span>@Model.Count() Articles</span>
                    </div>
                    <hr />
                    <div class="row col-md-12">
                        @foreach (var document in Model)
                        {
                            <div class="col-md-6 text-center">
                                <div class="item">
                                    <div class="book-wrapper">
                                        <div class="book-bg">
                                            <a href="#"><img src="~/uploads/CoverPage/@document.CoverPageName" style="width:177px;height:274px"></a>
                                            <div class="figcaption">
                                                <div class="search-book">
                                                    <a href="@Url.Action("Details","Ebook",new { id = document.Id })"><i class="icon-loop"></i></a>
                                                </div>
                                                <div class="direction-book">
                                                    <a href="#" onclick="addProduct(@document.Id)">
                                                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 5 24 24" width="24px" fill="#FFFFFF">
                                                            <path d="M0 0h24v24H0z" fill="none" />
                                                            <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z" />
                                                        </svg>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="book-title">
                                        <h4>@document.OriginalTitle</h4>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/js/customjs.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}