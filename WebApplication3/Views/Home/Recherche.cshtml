    }

    .input-submit .addProduct {
        width: 150px;
        background-color: #ecb43a;
        color: #ffffff;
        font-family: 'poppinslight', sans-serif;
        font-size: 14px;
        border: 0;
        line-height: 14px;
        display: inline-block;
        text-transform: capitalize;
        padding: 15px 0;
        text-align: center;
