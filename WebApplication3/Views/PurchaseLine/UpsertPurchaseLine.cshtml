
@model PortailEbook.Models.Entity.PurchaseLine

@{
    ViewData["Title"] = "Upsert PurchaseLine";
}
<div class="container shadow col-md-7 p-3" style="margin-bottom:70px;background-color:#f8f9fd">
    <div class="p-5">
        @if (Model == null)
        {
            <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="#0096c7" class="bi bi-cart-check-fill" viewBox="0 0 16 16">
                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm-1.646-7.646l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L8 8.293l2.646-2.647a.5.5 0 0 1 .708.708z" />
                </svg>
            </div>
            <hr />
            <p class="text-danger text-center">Veuillez remplir ce formulaire pour créer un nouvel ligne de commande*</p>
        }
        else
        {
            <div>
                <h3>Mettre a jours une ligne de commande</h3>
            </div>
            <hr />
        }
        <div class="mt-3">
            <form id="form" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="IdPurchase"></label>
                        <select asp-for="IdPurchase" class="form-control" asp-items="@ViewBag.PurchaseId" id="IdPurchase"></select>
                        <span id="validIdPurchase" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="IdDocument"></label>
                        <select asp-for="IdDocument" class="form-control" asp-items="@ViewBag.DocumentId" id="IdDocument"></select>
                        <span id="validIdDocument" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="UnitPrice"></label>
                        <input asp-for="UnitPrice" class="form-control" placeholder="Unit Price" id="UnitPrice">
                        <span id="validUnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Quantity"></label>
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" id="Quantity">
                        <span id="validQuantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="DiscountPercent"></label>
                        <input asp-for="DiscountPercent" class="form-control" placeholder="DiscountPercent" id="DiscountPercent">
                        <span id="validDiscountPercent" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" class="form-control" placeholder="Discount" id="Discount">
                        <span id="validDiscount" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center mt-2">
                    <button type="button" onclick="savePurchaseLine()" class="btn btn-primary col-md-12">Enregistrer ligne de commande</button>
                </div>
                <div class="text-center mt-2">
                    <a asp-action="Index" class="btn btn-info col-md-12">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-check" viewBox="0 -1 16 20">
                            <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3.854 2.146a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 3.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 7.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z" />
                        </svg>
                        Retour vers liste
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/js/PurchaseLineList.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
