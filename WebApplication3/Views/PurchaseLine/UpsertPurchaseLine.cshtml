@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model PortailEbook.Models.Entity.PurchaseLine

@{
    ViewData["Title"] = "Upsert PurchaseLine";
}
<div class="container shadow col-md-7 p-3" style="margin-bottom:70px;background-color:#f8f9fd">
    <div class="p-5">
        <div>
            <h3>@localizer["UpdatePurchaseLine"]</h3>
        </div>
        <hr />
        <div class="mt-3">
            <form id="form" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="IdPurchase"></label>
                        <select asp-for="IdPurchase" class="form-control" asp-items="@ViewBag.PurchaseId" id="IdPurchase"></select>
                        <span id="validIdPurchase" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="IdDocument"></label>
                        <select asp-for="IdDocument" class="form-control" asp-items="@ViewBag.DocumentId" id="IdDocument"></select>
                        <span id="validIdDocument" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="UnitPrice"></label>
                        <input asp-for="UnitPrice" class="form-control" placeholder="Unit Price" id="UnitPrice">
                        <span id="validUnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Quantity"></label>
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" id="Quantity">
                        <span id="validQuantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="DiscountPercent"></label>
                        <input asp-for="DiscountPercent" class="form-control" placeholder="DiscountPercent" id="DiscountPercent">
                        <span id="validDiscountPercent" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" class="form-control" placeholder="Discount" id="Discount">
                        <span id="validDiscount" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center mt-2">
                    <button type="button" onclick="savePurchaseLine()" class="btn btn-primary col-md-12">@localizer["SavePurchaseLine"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/js/PurchaseLineList.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
