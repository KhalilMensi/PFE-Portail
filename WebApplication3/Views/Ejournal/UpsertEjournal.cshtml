@model PortailEbook.Models.Entity.Ejournal
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Upsert Ejournal";
}

<div class="container shadow col-md-12" style="margin-bottom:70px;background-color:#f8f9fd">
    <div class="pb-5 pl-5 pr-5">
        @if (Model == null)
        {
            <div class="text-center p-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="#00b4d8" class="bi bi-journal-richtext" viewBox="0 0 16 16">
                    <path d="M7.5 3.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0zm-.861 1.542l1.33.886 1.854-1.855a.25.25 0 0 1 .289-.047L11 4.75V7a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 7v-.5s1.54-1.274 1.639-1.208zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                    <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z" />
                    <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z" />
                </svg>
            </div>
            <hr />
            <p class="text-danger text-center p-3">@localizer["TextCreateEjournal"]</p>
        }
        else
        {
            <div class="text-center">
                <svg id="Capa_1" enable-background="new 0 0 512 512" height="90" viewBox="0 0 512 512" width="90" xmlns="http://www.w3.org/2000/svg"><g><g><path d="m286 444 223-48v-300l-233 40-3 133z" fill="#9c6750" /><path d="m3 411 224 33 19-181-10-125-233-33z" fill="#9c6750" /><path d="m227 444h59l-10-308-40 2z" fill="#844f3e" /></g><g fill="#f3d544"><path d="m484 406 28-7v-33l-8 1-3 20-17 7z" /><path d="m489 96 23-4v29l-7-1-1-16-13-2z" /><path d="m0 129v-28l26 4-2 8-15 1-3 14z" /></g><g><path d="m256 159-226-103-7 337 239 43z" fill="#e7e2d5" /><path d="m256 159 221-107 12 328-227 56z" fill="#e7e2d5" /><path d="m50 356 33-328 173 131 6 277z" fill="#f4efe3" /><path d="m147 0 109 159 6 277-176-121z" fill="#fdf9f2" /><path d="m256 159 167-130 35 315-196 92z" fill="#f4efe3" /><path d="m256 159 104-159 60 311-158 125z" fill="#fdf9f2" /><path d="m252 151h8l6 361h-20z" fill="#d68034" /><g fill="#e7e2d5"><g><path d="m156 56 82 100-3 87-98-92z" /><path d="m131 172 102 85-2 13-103-88z" /><path d="m125 203 92 69-2 10-93-70z" /><path d="m120 228 106 73-2 12-106-75z" /><path d="m115 254 115 76v16l-118-82z" /><path d="m107 282 105 66-4 14-103-69z" /></g><g><path d="m271 162 81-116 3 12-82 118z" /><path d="m274 189 86-113 3 14-87.653 108.426z" /><path d="m279 218 84-92 3 14-87 92z" /><path d="m279 246 82-81 2 14-84 79z" /><path d="m386 320 17-14-7-18-13 10z" /></g></g></g><path d="m34 420-34-6v-42l11 3 2 21 20 13z" fill="#f3d544" /></g></svg>
            </div>
            <hr />
            <p class="text-danger text-center p-3">@localizer["UpdateEjournal"]</p>

        }
        <div class="mt-3">
            <form id="form" enctype="multipart/form-data">
                <div class="form-row col-md-12">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="FileName" />
                    <input type="hidden" asp-for="CoverPageName" />
                    <div class="form-group col-md-4">
                        <label asp-for="ISSN"></label>
                        <input asp-for="ISSN" class="form-control" id="ISSN">
                        <span id="validISSN" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Doi"></label>
                            <input asp-for="Doi" class="form-control" id="Doi">
                            <span id="validDoi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="OriginalTitle"></label>
                            <input asp-for="OriginalTitle" class="form-control" id="OriginalTitle">
                            <span id="validOriginalTitle" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Collection"></label>
                            <input asp-for="Collection" class="form-control" id="Collection">
                            <span id="validCollection" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Theme"></label>
                            <select asp-for="Theme" class="custom-select text-center" id="Theme">
                                <option value="">@localizer["ThemeSelection"]</option>
                                <option value="Architecture">@localizer["Architecture"]</option>
                                <option value="Science fondamentale">@localizer["scienceFondamental"]</option>
                                <option value="Sciences médicales">@localizer["scienceMedical"]</option>
                                <option value="Lettres et civilisation">@localizer["lettreEtcivilisation"]</option>
                                <option value="Sciences humaines, sociales et religieuses">@localizer["scienceHumain"]</option>
                                <option value="Sciences juridiques et politiques">@localizer["scienceJuridique"]</option>
                                <option value="Sciences de l’ingénieur">@localizer["scienceIngenieur"]</option>
                                <option value="Sciences économiques et gestion">@localizer["scienceEconomique"]</option>
                            </select>
                            <span id="validTheme" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Catalogue"></label>
                            <input asp-for="Catalogue" class="form-control" id="Catalogue">
                            <span id="validCatalogue" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="form-group col-md-4">
                        <label asp-for="PublicationDate"></label>
                        <select asp-for="PublicationDate" class="custom-select text-center" id="PublicationDate">
                            <option value="">@localizer["YearSelection"]</option>
                            @for (int i = @DateTime.Now.Year; i > @DateTime.Now.Year - 10; i--)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <span id="validPublicationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Editor"></label>
                        <input asp-for="Editor" class="form-control" id="Editor">
                        <span id="validEditor" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="File"></label>
                            <input asp-for="File" class="form-control" id="File" accept="application/pdf">
                            <span id="validFile" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CoverPage"></label>
                            <input asp-for="CoverPage" class="form-control" id="CoverPage">
                            <span id="validCoverPage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <select asp-for="State" class="custom-select text-center" id="State">
                                <option value="">@localizer["StateSelection"]</option>
                                <option value="Publier">@localizer["Published"]</option>
                                <option value="Non publier">@localizer["NotPublished"]</option>
                            </select>
                            <span id="validState" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Frequency"></label>
                        <input asp-for="Frequency" min="1" class="form-control" id="Frequency">
                        <span id="validFrequency" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="OriginalLanguage"></label>
                            <select asp-for="OriginalLanguage" class="custom-select text-center" id="OriginalLanguage">
                                <option value="">@localizer["LanguageSelection"]</option>
                                <option value="English">English</option>
                                <option value="French">French</option>
                                <option value="Arabic">Arabic</option>
                            </select>
                            <span id="validOriginalLanguage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LanguagesVarients"></label>
                            <input asp-for="LanguagesVarients" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="form-group col-md-4">
                        <label asp-for="JournalScope"></label>
                        <input asp-for="JournalScope" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="TitlesVariants"></label>
                            <input asp-for="TitlesVariants" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Subtitle"></label>
                            <input asp-for="Subtitle" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Foreword"></label>
                            <input asp-for="Foreword" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Keywords"></label>
                            <input asp-for="Keywords" class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ImpactFactor"></label>
                        <input asp-for="ImpactFactor" class="form-control">
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="FileFormat"></label>
                            <input asp-for="FileFormat" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DateFirstIssue"></label>
                            <input asp-for="DateFirstIssue" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Url"></label>
                            <input asp-for="Url" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Translator"></label>
                            <input asp-for="Translator" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AccessType"></label>
                            <input asp-for="AccessType" class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="TotalIssuesNb"></label>
                        <input asp-for="TotalIssuesNb" type="number" min="1" class="form-control">
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" min="0" value="0" type="number" class="form-control" id="Price">
                            <span id="validPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="MarcRecordNumber"></label>
                            <input asp-for="MarcRecordNumber" min="0" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Country"></label>
                            <input asp-for="Country" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PhysicalDescription"></label>
                            <input asp-for="PhysicalDescription" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AccompanyingMaterials"></label>
                            <input asp-for="AccompanyingMaterials" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AccompanyingMaterialsNb"></label>
                            <input asp-for="AccompanyingMaterialsNb" min="0" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-row col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="VolumeNb"></label>
                            <input asp-for="VolumeNb" min="0" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Abstract"></label>
                            <input asp-for="Abstract" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Notes"></label>
                            <input asp-for="Notes" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="text-center mt-2">
                    <button type="button" onclick="saveEjournal('@ViewBag.insert')" class="btn btn-primary col-md-5">@localizer["SaveEjournal"]</button>
                </div>
                <div class="mt-2 text-center">
                    <a asp-action="Index" asp-controller="Ejournal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                        </svg>
                        @localizer["BackToList"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/js/EjournalList.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

