        border-radius: 0;
    }

    .content-tabs {
        margin-top: -49px;
        z-index: 1000;
    }

    .extra-row {
        margin-left: -45px;
        margin-right: -45px;
    }

    .content-tabs .nav-tabs .nav-item.show .nav-link, .content-tabs .nav-tabs .nav-link.active {
